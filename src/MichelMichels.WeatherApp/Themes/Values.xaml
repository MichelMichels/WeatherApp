<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

        <!--  Font Families  -->
        <ResourceDictionary>
            <FontFamily x:Key="GoogleSans">pack://application:,,,/Fonts/#Google Sans</FontFamily>
        </ResourceDictionary>

        <!--  TextBlock  -->
        <ResourceDictionary>
            <Style BasedOn="{StaticResource MaterialDesignTextBlock}" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource GoogleSans}" />
            </Style>
        </ResourceDictionary>

        <!--  CornerRadius  -->
        <ResourceDictionary>
            <CornerRadius
                x:Key="WeatherCornerRadius"
                BottomLeft="12"
                BottomRight="12"
                TopLeft="12"
                TopRight="12" />
        </ResourceDictionary>

        <!--  Background  -->
        <ResourceDictionary>
            <SolidColorBrush
                x:Key="WeatherBorderBackground"
                Opacity="0.25"
                Color="Black" />
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>